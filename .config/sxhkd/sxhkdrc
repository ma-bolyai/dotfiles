super + Escape
	pkill -USR1 -x sxhkd

super + shift + {q,r}
	bspc {quit,wm -r}

super + c
	bspc node -c

super + f
	bspc node -t {fullscreen,tiled}

super + g
	bspc node -s biggest.local

super + s
	bspc node -t {floating,tiled}

super + k
	bspc node -f next.!hidden.window.local

super + {Left,Right}
	bspc desktop -f {prev,next}.local

super + shift + {Left,Right}
	bspc node -d {prev,next}.local

super + {1-9}
	bspc desktop -f {1-9}

super + shift + {1-9}
	bspc node -d {1-9}

alt + Tab
	DMENU='dmenu -b' dmenu-win

super + Return
	st

super + p
	dmenu_run -b

super + l
	XSECURELOCK_COMPOSITE_OBSCURER=0 XSECURELOCK_PASSWORD_PROMPT="asterisks" xsecurelock

Print
	flameshot gui

shift + Print
	flameshot full -c

{XF86AudioLowerVolume,XF86AudioRaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-10%,+10%}

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightnessUp
	brightnessctl set 10%+

XF86MonBrightnessDown
	brightnessctl set 10%-
